<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form method="post" action="/landmarks/<%=@landmark.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label><h3>Edit Your Landmark</h3></label>
  <h4>Name:</h4>
  <input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>"><br>
  <label><h4>Year Completed</h4></label>
  <input type="integer" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed%>"><br>

  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/figures">Landmarks</a>
