<form method="post" action="/landmarks">
  <label><h3>Landmarks</h3></lable>
    <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="landmark[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%>
    <%end%>
  <br>
  <label><h3>Register a New Landmark</h3></label>
